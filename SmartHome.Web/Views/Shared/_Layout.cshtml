<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Smart home app</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>



    <div class="navbar navbar-inverse navbar-fixed-top">
        <div id="header-sticky">
        </div>
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="pull-left navbar-header-smarthome-image">
                </div>
                @Html.ActionLink("Smart Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Version", "Index", "Version")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Login", "Login", "UserInfo")</li>
                </ul>
                <div class="pull-right">

                    <div class="row col-md-12">
                        @*<div class="col-md-8">
                            <span class="text-muted">Sign in/Sign up</span>
                        </div>*@
                        <div class="navbar-signup-image col-md-2">
                        </div>
                       

                    </div>
                   

                    
                   
                </div>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>

    </div>
    <br />

    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer class="footer-color">
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>

    <div id="footer-sticky">
        <div class="container">
            <div class="pull-left footer-sinepulse-image">
            </div>
            <p class="text-muted">&copy; @DateTime.Now.Year - Aplomb tech bd</p>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
