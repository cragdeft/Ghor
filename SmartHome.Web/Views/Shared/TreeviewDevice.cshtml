@model IEnumerable<SmartHome.Entity.DeviceInfoEntity>
@GetTreeView(Model, Model.FirstOrDefault().ParentId)

@helper GetTreeView(IEnumerable<SmartHome.Entity.DeviceInfoEntity> siteMenu, int parentID)
{
foreach (var nextDevice in siteMenu.Where(a => a.ParentId.Equals(parentID)))
{
        <li>
            @{var submenu = siteMenu.Where(a => a.ParentId.Equals(nextDevice.SequenceId)).Count();}
            @if (submenu > 0)
            {
                <span class="collapse collapsible">&nbsp;</span>
            }
            else
            {
                <span style="width:15px; display:inline-block">&nbsp;</span>
            }
            <span>
                <a href="#">@nextDevice.DisplayName</a>
            </span>
            @if (submenu > 0)
            {
                <ul>
                    @GetTreeView(siteMenu, nextDevice.SequenceId)
                    @* Recursive  Call for Populate Sub items here*@
                </ul>
            }
        </li>
                }
}
